model Reviews {
    review_id   String   @unique @default(uuid())
    customer_id String
    // customer    User   @relation(fields: [customer_id], references: [user_id])
    medicine_id String
    medicine    Medicine @relation(fields: [medicine_id], references: [medicine_id])
    rating      Int      @default(5)
    comment     String   @db.Text
}
