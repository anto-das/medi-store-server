model Order_item {
    item_id        String   @unique @default(uuid())
    order_id       String
    order          Orders   @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
    medicine_id    String
    medicine       Medicine @relation(fields: [medicine_id], references: [medicine_id], onDelete: Cascade)
    order_quantity Int
    price          Decimal  @db.Decimal(10, 0)
    createdAt      DateTime @default(now())
}
